        <a href='@Url.Action("Reporteresultadoscategorias", "Admin", new {id =@Model.company_Id})'>
            <img src='@Url.Content("~/Content/Imagenes/progreso_curso.png")' style="width:90%; height:80%;" />
        </a>
        <h4>@Html.ActionLink("Progreso Categorias", "Reporteresultadoscategorias", "Admin", new { ReturnUrl = ViewBag.ReturnUrl, id = @Model.company_Id }, new { @class = "", role = "form", @style = "background-color:transparent;color:#000;" })</h4>
    </div>

    <h4>@Html.ActionLink("RDLC", "ReportByCompany", "Admin", new { ReturnUrl = ViewBag.ReturnUrl, id = @Model.company_Id }, new { @class = "", role = "form", @style = "background-color:transparent;color:#000;" })</h4>
