    <div class="col-md-12">
        <br />
    </div>
    @if (ViewBag.ReportViewer != null)
    {

        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" style="overflow-x: scroll;  border: 2px solid gray;">
                @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, new { scrolling = "no", style = "width: 100%; height: 100%; " })
            </div>
        </div>
    }
