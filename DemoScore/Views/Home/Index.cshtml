@using DemoScore.Models
@model indexMain


@if (TempData["Info"] != null)
{
    @section Scripts {
        <script type="text/JavaScript">
            $(document).ready(function () {
                $("#Inform").modal();
            });
        </script>
    }       }
<div id="Inform" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                @TempData["Info"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@if (Model.Home != null)
{
    switch (Model.Home.ActualRole)
    {
        case ROLES.Usuario:
            <br /><br />
            if (Model.TermsandConditions.terms == Terms_and_Conditions.No)
            {
                { Html.RenderAction("TermsGame", "ViewGameUser"); }
            }
            else
            {
                { Html.RenderAction("Preview", "ViewGameUser", new { Id = Model.settin }); }
            }
            break;
        case ROLES.Administrador:
            <br /><br />
            { Html.RenderAction("Perfil", "Admin"); }
            break;
    }
}
