@using DemoScore.Models
@model indexMain


@if (TempData["Info"] != null)
{
    @section Scripts {
        <script type="text/JavaScript">
            $(document).ready(function () {
                $("#Inform").modal();
            });
        </script>
    }       }
<div id="Inform" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                @TempData["Info"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>
@if (Model.Home != null)
{
    switch (Model.Home.ActualRole)
    {
        case ROLES.Usuario:
            <br /><br />
            if (Model.TermsandConditions.terms == Terms_and_Conditions.No)
            {
                { Html.RenderAction("TermsGame", "ViewGameUser"); }
            }
            else
            {
                { Html.RenderAction("Preview", "ViewGameUser", new { Id = Model.settin }); }
            }
            break;
        case ROLES.Administrador:
            <br /><br />
            { Html.RenderAction("Perfil", "Admin"); }
            break;
    }
}
else
{
    <style type="text/css">
        .ImagenFondo {
            background-image: url('../Content/Imagenes/background-login-bureau.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: fixed;
        }

        .content {
            width: 100%;
            height: 100%;
        }
    </style>
    <body class="ImagenFondo">
        <div class="center-block col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class='center-block' align="center">
                <img class="img-responsive" src="~/Content/Imagenes/logo-login.png" style="width:16%" />
                @{ Html.RenderPartial("_Login", Model.Login); }
            </div>
            <div class="center-block">

            </div>
        </div>
        if (TempData["Menssages"] != null)
        {
        @section Scripts {
            <script type="text/JavaScript">
                $(document).ready(function () {
                    $("#Menssages").modal();
                });
            </script>
        }}

        <div id="Menssages" class="modal fade" role="dialog">
            <div class="modal-dialog1">
                <div class="modal-content">
                    <div class="modal-body">
                        <p>
                            @TempData["Menssages"]
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    </body>
}